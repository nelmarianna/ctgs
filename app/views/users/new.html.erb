<%= stylesheet_link_tag "/add_user.css" %>
<div class="adduserform">
<p class="heading1">  Add new <%= @type %></p>
<div class="leftcol"> 
<%= form_for @user, url: create_user_path do |f| %>

<%= f.hidden_field :type, :value => params[:type] %>

	<%= f.label :first_name %><br />
	<%= f.text_field :firstName %>

	<%= f.label :last_name %><br />
	<%= f.text_field :lastName %>


	<%= f.label :login_id %><br />
	<%= f.text_field :loginID %>

	<%= f.label :password %><br />
	<%= f.text_field :password %>

	<%= f.label :email %><br />
	<%= f.text_field :email  %>
</div>

<div class="rightcol"> 
<% if @type=="Requester" %>

	
		<%= f.label :supervisor %><br />
		<%= f.collection_select :sup_id, @sups, :user_id, :firstName, :prompt => "Select a supervisor" %>
	
		<p class="headings"><%= f.label :student_number %></p><br />
		<%= f.text_field :studNumb %>


		<p class="headings"><%= f.label :academic_unit %></p><br />
		<%= f.text_field :academicUnit %>
	
		<p class="headings"><%= f.label :program %></p><br />
		<%= f.text_field :program %>

		<p class="headings"><%= f.label :session_number%></p><br />
		<%= f.text_field :sessionNumber %>
	
		<p class="headings"><%= f.label :thesis_topic %></p><br />
		<%= f.text_field :thesisTopic %>
	
		<p class="headings"><%= f.label :bank_account_number%></p><br />
		<%= f.text_field :bankAccNumb %>

<% end %>
</div>
<% if @type=="Supervisor" %>
	
		<p class="headings"><%= f.label :employee_number%></p><br />
		<%= f.text_field :employeeNumb %>
	
		<p class="headings"><%= f.label :grant_account_number%></p><br />
		<%= f.text_field :grantAccNumb %>

<% end %>

<%= f.submit 'Create User',:class => "btn btn-primary btn-block btn-large"  %>

</div>
<% end %>
</form>

<body class="adduser"></body>