<!DOCTYPE html>
<html>
<head>
  <title>CTGS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<a  href="/home">Home</a>
	<% if user_signed_in? %>
		<%= link_to 'Sign out', destroy_user_session_path, data:{method: :delete}, :class=>"sign" %>
	<% else %>
			<a class="sign" href="/users/sign_in">Sign In</a>
	<%end%>

<%= yield %>

</body>
</html>
